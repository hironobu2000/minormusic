<div class="postminor3">
<h2>新規投稿</h2>
<div class="newpost">
<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :曲名 %><br>
    <%= f.text_field :music, :size => 50 %>
  </div>
  <br>
  <div class="field">
    <%= f.label :アーティスト %><br>
    <%= f.text_field :artist, :size => 50 %>
  </div>
  <br>
  <div class="okiniiri">
    <%= f.label :お気に入りの点 %><br>
    <%= f.text_area :okiniiri, size: "50x5" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :マイナーなところ %><br>
    <%= f.select :minor, [["カップリング"], ["アーティスト"],["時代"],["その他"]], include_blank: "マイナー" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :ジャンル %><br>
    <%= f.text_field :genre, :size => 50 %>
  </div>
  <br>
  <br>
  
  <%= f.submit "投稿する" %>
<% end %>
<%= link_to "投稿一覧に戻る", posts_path %>
</div>