<div class="editdesign">
<%= form_for @post do |f| %>
    
  <div class="field">
  <%= f.label :曲名 %><br>
  <%= f.text_field :music, :size => 50 %>
  </div>
  <br>
  <div class="field">
  <%= f.label :アーティスト %><br>
  <%= f.text_field :artist, :size => 50 %>
  </div>
  <br>
  <div class="okiniiri">
  <%= f.label :お気に入りの点 %><br>
  <%= f.text_area :okiniiri, size: "50x5", :placeholder => "(例)・○○○○" %>
  </div>
  <br>
  <div class="field">
  <%= f.label :マイナーなところ %><br>
  <%= f.select :minor, [["カップリング"], ["アーティスト"],["時代"],["その他"]], include_blank: "マイナー" %>
  </div>
  <br>
  <div class="field">
  <%= f.label :ジャンル %><br>
  <%= f.text_field :genre, :size => 50 %>
  </div>
  <br>
  <br>

    <%= f.submit "編集する" %>

  <% end %>
  </div>